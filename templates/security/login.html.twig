{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	{{ include('navbar/index.html.twig') }}
	<div class="container-height">
		<form method="post" class="w-50 m-auto text-center">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					Vous êtes connecté(e) en tant que
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}


			<h1 class="h3 mb-3 font-weight-normal">Connectez vous</h1>
			<p>
				Pas encore inscrit ?
				<a href="{{path('app_register')}}" id="inscription-a">
					Par ici
				</a>
			</p>
			<label for="username" class="mb-3">Email</label>
			<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
			<label for="password" class="mb-3 mt-3">Mot de passe</label>
			<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			{#
										            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
										            See https://symfony.com/doc/current/security/remember_me.html
										
										            <div class="checkbox mb-3">
										                <input type="checkbox" name="_remember_me" id="_remember_me">
										                <label for="_remember_me">Remember me</label>
										            </div>
										        #}

			<button class="btn btn-lg btn-primary mt-3" type="submit">
				Se connecter
			</button>
		</form>
	</div>
{% endblock %}
